<?xml version="1.0"?>

<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events>
      <event name="publish:end">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="azurecasestudy">azurecasestudy</site>
          </sites>
        </handler>
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="azurecasestudy">azurecasestudy</site>
          </sites>
        </handler>
      </event>
    </events>
    <sites>
      <site name="azurecasestudy" patch:after="site[@name='modules_website']"
            targetHostName="localhost.azure"
            database="web"
            virtualFolder="/"
            physicalFolder="/"
            rootPath="/sitecore/content/azurecasestudy"
            startItem="/Home"
            placeholderSettingsRoot="/sitecore/layout/Placeholder Settings/azurecasestudy"
            domain="extranet"
            allowDebug="true"
            cacheHtml="true"
            htmlCacheSize="50MB"
            registryCacheSize="0"
            viewStateCacheSize="0"
            xslCacheSize="25MB"
            filteredItemsCacheSize="10MB"
            enablePreview="true"
            enableWebEdit="true"
            enableDebugger="true"
            disableClientData="false"
            cacheRenderingParameters="true"
            renderingParametersCacheSize="10MB"
            enableItemLanguageFallback="true" />
    </sites>
  </sitecore>
</configuration>